#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo "🔍 正在进行推送前检查..."

# TypeScript 类型检查
echo "📝 检查 TypeScript 类型..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "${RED}❌ TypeScript 类型检查失败，请修复类型错误后再推送${NC}"
  exit 1
fi

# 构建测试（可选，如果觉得太慢可以注释掉）
# echo "🏗️  测试构建..."
# pnpm build
# if [ $? -ne 0 ]; then
#   echo "${RED}❌ 构建失败，请确保项目可以正常构建${NC}"
#   exit 1
# fi

echo "${GREEN}✅ 所有检查通过，正在推送...${NC}"