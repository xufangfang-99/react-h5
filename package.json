{
  "name": "react-h5-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @apps/h5-web dev",
    "dev:all": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --filter @apps/h5-web build",
    "build:all": "pnpm --filter './apps/*' --filter './packages/*' build",
    "build:packages": "pnpm --filter './packages/*' build",
    "test": "pnpm --filter './packages/*' test",
    "typecheck": "pnpm --filter @apps/h5-web typecheck",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier && pnpm run lint:stylelint",
    "lint:eslint": "eslint . --cache",
    "lint:prettier": "prettier --write \"**/*.{js,ts,json,tsx,css,scss,html,md}\"",
    "lint:stylelint": "stylelint \"**/*.{css,scss,less}\" --cache --fix",
    "lint:markdown": "markdownlint \"**/*.md\" --fix --ignore node_modules --ignore \"**/node_modules/**\"",
    "clean": "pnpm --filter './apps/*' --filter './packages/*' clean:cache",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.19.9",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.0",
    "stylelint-config-recess-order": "^7.1.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": "^20.16.0 || >=22.11.0",
    "pnpm": ">=9"
  }
}
