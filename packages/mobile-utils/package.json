{
  "name": "@packages/mobile-utils",
  "version": "1.0.0",
  "description": "移动端常用工具库",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./device": {
      "types": "./dist/device.d.ts",
      "import": "./dist/device.js"
    },
    "./gesture": {
      "types": "./dist/gesture.d.ts",
      "import": "./dist/gesture.js"
    },
    "./network": {
      "types": "./dist/network.d.ts",
      "import": "./dist/network.js"
    },
    "./storage": {
      "types": "./dist/storage.d.ts",
      "import": "./dist/storage.js"
    },
    "./format": {
      "types": "./dist/format.d.ts",
      "import": "./dist/format.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "import": "./dist/dom.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "rimraf dist && tsc",
    "test": "echo \"No tests yet\""
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.8",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
